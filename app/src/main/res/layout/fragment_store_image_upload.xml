<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_mono"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Add a store image"/>

    <com.takusemba.cropme.CropLayout
        android:layout_marginTop="36dp"
        android:id="@+id/crop_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cropme_custom_shape_layout="@layout/custom_overlay"
        app:cropme_frame_height_percent="85%"
        app:cropme_frame_width_percent="85%"
        app:cropme_max_scale="3.0"
        app:cropme_overlay_shape="custom"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        />
    <Button
        android:id="@+id/button_upload_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/crop_view"
        android:background="@drawable/button_sign_in"
        android:text="Upload image"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_upload_image"
        android:background="@drawable/button_sign_in"
        android:text="SELECT IMAGE"
        android:textColor="@color/white" />






</androidx.constraintlayout.widget.ConstraintLayout>