<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/defult_item_layout_margin_double"
    android:background="@drawable/store_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="54dp"
        android:layout_height="54dp"
        tools:src="@drawable/profile_face"
        android:layout_centerVertical="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_text_view"
        tools:text="Shiv Kiryana Store"
        android:layout_toEndOf="@id/avatar_image_view"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:textColor="@color/mandarin_red"
        android:layout_marginStart="@dimen/defult_item_layout_margin"
        android:padding="@dimen/defult_item_layout_margin_half"/>

    <TextView
        android:id="@+id/last_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black900"
        tools:text="Lorem Ispum Message"
        android:layout_marginStart="@dimen/defult_item_layout_margin"
        android:layout_toEndOf="@id/avatar_image_view"
        android:layout_below="@id/user_name_text_view"
        android:lines="1"
        android:layout_toStartOf="@id/read_image_view"
        android:padding="@dimen/defult_item_layout_margin_half"/>

    <ImageView
        android:id="@+id/read_image_view"
        android:layout_width="@dimen/defult_item_layout_margin_triple"
        android:layout_height="@dimen/defult_item_layout_margin_triple"
        android:tint="@color/quantum_grey700"
        android:layout_marginStart="@dimen/defult_item_layout_margin"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/last_message_text_view"/>



</RelativeLayout>