<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:foreground="?selectableItemBackground"
    android:layout_marginTop="@dimen/defult_item_layout_margin_double"
    android:layout_marginBottom="@dimen/defult_item_layout_margin"
    android:layout_marginStart="@dimen/defult_item_layout_margin_double"
    android:layout_marginEnd="@dimen/defult_item_layout_margin_double"
    app:cardCornerRadius="8dp"
    tools:layout_margin="32dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/bar_icon"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            tools:src="@drawable/search" />

        <TextView
            android:id="@+id/bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_vertical"
            tools:text="Search Store" />
    </LinearLayout>


</androidx.cardview.widget.CardView>