<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shimmer_layout"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_layout_search_bar_height"
        android:background="@color/dot"
        android:layout_marginTop="@dimen/defult_item_layout_margin_double"
        android:layout_marginBottom="@dimen/defult_item_layout_margin"
        android:layout_marginStart="@dimen/defult_item_layout_margin_double"
        android:layout_marginEnd="@dimen/defult_item_layout_margin_double"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/slide_height"
            android:background="@color/dot"
            android:layout_marginTop="@dimen/defult_item_layout_margin"
            android:layout_marginStart="@dimen/defult_item_layout_margin_double"
            android:layout_marginEnd="@dimen/defult_item_layout_margin_double"
            android:layout_marginBottom="@dimen/defult_item_layout_margin"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_marginStart="@dimen/defult_item_layout_margin"
         android:layout_marginEnd="@dimen/defult_item_layout_margin"
         android:layout_height="wrap_content">
         <View
             android:layout_width="0dp"
             android:layout_margin="@dimen/defult_item_layout_margin"
             android:layout_height="@dimen/store_fragment_category_shimmer_item_height"
             android:layout_weight="1"
             android:background="@color/dot"/>
         <View
             android:layout_width="0dp"
             android:layout_margin="@dimen/defult_item_layout_margin"
             android:layout_height="@dimen/store_fragment_category_shimmer_item_height"
             android:layout_weight="1"
             android:background="@color/dot"/>
         <View
             android:layout_width="0dp"
             android:layout_margin="@dimen/defult_item_layout_margin"
             android:layout_height="@dimen/store_fragment_category_shimmer_item_height"
             android:layout_weight="1"
             android:background="@color/dot"/>

     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/defult_item_layout_margin"
            android:layout_marginEnd="@dimen/defult_item_layout_margin"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_margin="@dimen/defult_item_layout_margin"
                android:layout_height="@dimen/store_fragment_category_shimmer_item_height"
                android:layout_weight="1"
                android:background="@color/dot"/>
            <View
                android:layout_width="0dp"
                android:layout_margin="@dimen/defult_item_layout_margin"
                android:layout_height="@dimen/store_fragment_category_shimmer_item_height"
                android:layout_weight="1"
                android:background="@color/dot"/>
            <View
                android:layout_width="0dp"
                android:layout_margin="@dimen/defult_item_layout_margin"
                android:layout_height="@dimen/store_fragment_category_shimmer_item_height"
                android:layout_weight="1"
                android:background="@color/dot"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_margin="@dimen/defult_item_layout_margin_double"
            android:layout_height="@dimen/shimmer_layout_search_bar_height"
            android:background="@color/dot"/>

        <include
            layout="@layout/shimmer_item_horizontal_block"

            />
    </LinearLayout>




</com.facebook.shimmer.ShimmerFrameLayout>