<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CompleteOrderActivity">

    <include
        layout="@layout/layout_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <include layout="@layout/shimmer_layout_horizontal_blocks"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <include
        layout="@layout/item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_layout"/>


    <include layout="@layout/layout_add_address_toolbar" />

    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_click_view"
        android:layout_alignParentBottom="true">


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/defult_item_layout_margin"
            style="?android:progressBarStyleSmall"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/button_place_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/defult_item_layout_margin_double"
            android:paddingBottom="@dimen/defult_item_layout_margin_double"
            android:drawablePadding="@dimen/defult_item_layout_margin"
            android:text="Place Order"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:drawableStart="@drawable/ic_launch_black_24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/white"/>

    </FrameLayout>


    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        android:background="@color/jalapino_red">


        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:paddingStart="@dimen/defult_item_layout_margin_double"
            android:paddingEnd="@dimen/defult_item_layout_margin_double"
            android:text="Order Placed Successfully"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_note"
            android:layout_below="@id/top_view"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/defult_item_layout_margin_double"
            android:paddingTop="75dp"
            android:paddingEnd="@dimen/defult_item_layout_margin_double"
            android:visibility="gone">

            <TextView
                android:id="@+id/order_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                tools:text="Order Id : OID-6541561564" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defult_item_layout_margin"
                android:text="will be delivered at"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defult_item_layout_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                tools:text="18 B Block Ward No 18" />


        </LinearLayout>


        <TextView
            android:id="@+id/bottom_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/defult_item_layout_margin"
            android:drawableTop="@drawable/ic_favorite_black_24dp"
            android:drawablePadding="@dimen/defult_item_layout_margin"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/defult_item_layout_margin_double"
            android:paddingEnd="@dimen/defult_item_layout_margin_double"
            android:text="Thank you for placing order. We will notify you once retailer confirms your order."
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:src="@drawable/address_selected" />

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>


</RelativeLayout>