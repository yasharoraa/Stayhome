<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/defult_item_layout_margin_double"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="+91 7014911292"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/profile_face"
        android:drawablePadding="@dimen/defult_item_layout_margin_double"/>
    <ImageView

        android:layout_width="@dimen/profile_circle_dim"
        android:layout_height="@dimen/profile_circle_dim"
        android:layout_above="@id/dev_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_triangle"/>


    <TextView
        android:id="@+id/contetx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view"
        android:layout_marginTop="@dimen/defult_item_layout_margin_double"
        android:text="Contact us at"/>

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defult_item_layout_margin"
        android:layout_toEndOf="@id/contetx_title"
        android:layout_below="@id/text_view"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="@dimen/defult_item_layout_margin_double"
        android:text="indstayhome@gmail.com"/>

    <TextView
        android:id="@+id/dev_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/defult_item_layout_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/defult_item_layout_margin_double"
        android:text="@string/page_under_development"/>


</RelativeLayout>