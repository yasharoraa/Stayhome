<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorOnSurface">@color/dot</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.UserHomeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

    <style name="AppTheme.StoreActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

    <style name="Dialog.MainActviity" parent="AppTheme">
        <item name="colorAccent">@color/mandarin_red</item>
    </style>

    <style name="AppTheme.ViewOrderActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

    <style name="AppTheme.CompleteOrderActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AppTheme.OrderListViewActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

    <style name="AppTheme.AddressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/white_rounded_rectangle</item>

    </style>
    <style name="AppTheme.ViewImageActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>


    <style name="AddressEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/dot</item>
        <item name="colorControlActivated">@color/jalapino_red_transparent</item>
        <item name="colorControlHighlight">@color/jalapino_red_transparent</item>
    </style>

    <style name="ResetActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/jalapino_red</item>
        <item name="colorPrimaryDark">@color/jalapino_red</item>
        <item name="colorAccent">@color/jalapino_red</item>
    </style>

</resources>
