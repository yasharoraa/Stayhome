<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fieapps.stayhomeindia">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name="com.fieapps.stayhomeindia.Utils.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_user"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_user_round"
        android:theme="@style/AppTheme"
        tools:ignore="InnerclassSeparator"
        android:usesCleartextTraffic="true"
        >

        <service
            android:name=".Utils.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_home" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/white" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="Order Status Notification" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


        <activity android:name="com.fieapps.stayhomeindia.Activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"
            android:theme="@style/AppTheme.UserHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.fieapps.stayhomeindia.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name="com.fieapps.stayhomeindia.Activities.ViewImageActivity"
            android:theme="@style/AppTheme.ViewImageActivity" />
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.OrderListViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.OrderListViewActivity" />
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.ViewOrderActivity"
            android:theme="@style/AppTheme.ViewOrderActivity" />
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.AddAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.AddressDialog"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.CompleteOrderActivity"
            android:parentActivityName="com.fieapps.stayhomeindia.Activities.MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"
            android:theme="@style/AppTheme.CompleteOrderActivity"
             />
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.OrderActivity"
            android:theme="@style/AppTheme.UserHomeActivity" />
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.StoresActivity"
            android:theme="@style/AppTheme.StoreActivity" />
        <activity android:name="com.fieapps.stayhomeindia.Utils.LocationDetectingActivity" />
        <activity android:name="com.fieapps.stayhomeindia.Activities.MainActivity" >


        </activity>
        <activity
            android:name="com.fieapps.stayhomeindia.Activities.HomeActivityUser"
            android:theme="@style/AppTheme.UserHomeActivity">


        </activity>
    </application>

</manifest>